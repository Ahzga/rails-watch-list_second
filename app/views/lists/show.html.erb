<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <i class="fas fa-video"></i>
  <div class="d-flex justify-content-end">
    <div class="mr-3 border rounded-pill p-2"><%= link_to "My lists", lists_path %></div>
    <div class="ml-3 border rounded-pill p-2"><%= link_to "Add a list", new_list_path %></div>
    <div class="ml-3 border rounded-pill p-2"><%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %></div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/23LET4Hxj_U);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>


<!-- <div class="d-flex justify-content-center"> -->
  <div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-6">
      <div class="card-movies">
        <img src=<%= bookmark.movie.poster_url %> />
          <div class="card-movies-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <p><strong><%= bookmark.comment %></strong></p>
            </div>
            <%= link_to bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
      </div>
    </div>
  <% end %>
  </div>
